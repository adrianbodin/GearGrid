@page "/counter"
@rendermode InteractiveServer
<PageTitle>Counter</PageTitle>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Counter</h5>
    <p class="card-text" role="status">Current count: @currentCount</p>
    <button class="btn btn-secondary" @onclick="IncrementCount">
      Click me
    </button>
    @if (showMessage)
    {
      <p class="alert alert-success">You've reached 10 clicks!</p>
    }
  </div>
</div>